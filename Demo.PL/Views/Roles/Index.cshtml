@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary" asp-action="Create">Create New Role</a>

@if (Model.Count() > 0)
{
    <h1>All Roles</h1>
    <br />

    <div class="m-2">
        <form asp-action="Index" class="row offset-2" >
            <div class="col-8 pl-0">
                <input type="text" name="searchValue" placeholder="Role Name " class="form-control" />
            </div>
            <div class="col-4 pr-0">
                <input type="submit" value="Search" class="btn btn-outline-info" />
            </div>
        </form>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(m => m.RoleId)</td>
                <td>@Html.DisplayNameFor(m => m.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.RoleId</td>
                    <td>@role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@role.RoleId.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h4>There is no roles available !!!</h4>
    </div>
}
@section Scripts {
    <script src="~/js/site.js"></script>
}


