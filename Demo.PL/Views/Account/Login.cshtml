@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">
			<input class="text" placeholder="Your email" asp-for="Email">
			<span asp-validation-for="Email" class="text-danger"></span>
			<br />
			<input class="text" placeholder="Your password" asp-for="Password">
			<span asp-validation-for="Password" class="text-danger"></span>
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox" required="">
					<span>Remember Me ?</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Sign UP Now!</a></p>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

