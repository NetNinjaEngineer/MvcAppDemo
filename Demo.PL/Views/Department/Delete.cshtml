@model Department
@{
    ViewData["Title"] = "Delete";
}

<div asp-validation-summary="All" class="text-danger"></div>

<h1>Are you sure you want to delete @Model.Name Department ?</h1>
<br />
<form asp-action="Delete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input readonly class="form-control" asp-for="DateOfCreation" />
    </div>
    <input type="submit" value="Delete" asp-route-id="@Model.Id" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
